= form_for @event do |f|
  -if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :start_date
    = text_field :event, "start_date_picker", value: format_date(f.object.start_date), class: "date"
  .field
    = f.label "Start Time"
    = f.time_select :start_date
  .field
    = f.label :end_date
    = f.date_select :end_date
  .field
    = f.label :end_date
    = f.time_select :end_date
  .actions
    = f.submit 'Save'
